<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <sectionGroup name="RebelCms.cms">
      <section name="trees" type="RebelCms.Cms.Web.Configuration.ApplicationSettings.TreeConfiguration, RebelCms.Cms.Web" requirePermission="false"/>
      <section name="tasks" type="RebelCms.Cms.Web.Configuration.Tasks.TasksConfiguration, RebelCms.Cms.Web" requirePermission="false"/>
      <section name="applications" type="RebelCms.Cms.Web.Configuration.ApplicationSettings.ApplicationConfiguration, RebelCms.Cms.Web" requirePermission="false"/>
    </sectionGroup>
  </configSections>

  <RebelCms.cms>
    <tasks>
      <add type="RebelCms.Cms.Web.Tasks.DisplayUITask, RebelCms.Cms.Web.Tasks" trigger="post-package-install">
        <parameter name="controllerType" value="RebelCms.Cms.Packages.SystemInfo.Editors.SystemInfoEditorController, RebelCms.Cms.Packages.SystemInfo"/>
        <parameter name="action" value="PluginInfo"/>
      </add>
    </tasks>
    <trees>
      <add application="system" controllerType="RebelCms.Cms.Packages.SystemInfo.Controllers.SystemInfoTreeController, RebelCms.Cms.Packages.SystemInfo" />
    </trees>
    <applications>
      <add alias="system" name="System" icon="system-info.png" />
    </applications>
  </RebelCms.cms>

</configuration>