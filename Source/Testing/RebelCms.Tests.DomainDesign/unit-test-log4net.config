<?xml version="1.0"?>
<log4net>
  <root>
    <priority value="All"/>
    <appender-ref ref="ConsoleAppender" />
  </root>

  <logger name="NHibernate">
    <level value="ERROR" />
    <appender-ref ref="ConsoleAppender" />
  </logger>

  <logger name="RebelCms.Framework.Persistence.NHibernate.NhSessionHelper">
    <level value="ALL" />
  </logger>

  <logger name="RebelCms.Framework.Persistence.NHibernate">
    <level value="WARN" />
  </logger>

  <!-- Don't log every task trigger by default -->
  <logger name="RebelCms.Framework.Tasks.ApplicationTaskManager">
    <level value="WARN" />
  </logger>

  <logger name="RebelCms.Hive.Configuration.ProviderMappingGroup">
    <level value="WARN" />
  </logger>

  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <target value="Console.Out" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %logger: %message%newline" />
    </layout>
  </appender>
</log4net>
